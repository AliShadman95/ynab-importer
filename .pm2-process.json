{
  "name": "ynab",
  "script": "index.js",
  "watch": true,
  "max_restarts": 9999999,
  "max_memory_restart": "1024M",
  "instances": 1,
  "exec_mode": "fork",
  "error_file": "./logs/errors_pm2.log",
  "out_file": "./logs/debug_pm2.log",
  "ignore_watch": [
    ".git",
    "logs",
    "databases",
    "node_modules",
    "npm-debug.log"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "env": {
    "NODE_ENV": "production"
  }
}
